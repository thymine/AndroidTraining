<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="me.zhang.art">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ActivityActivity" />
        <!-- https://developer.android.com/guide/topics/manifest/activity-element.html -->
        <activity
            android:name=".activity.LifecycleActivity"
            android:configChanges="orientation|screenSize" /> <!-- Prevent activity from being recreated -->
        <activity android:name=".activity.AnotherActivity" />
        <activity
            android:name=".activity.DialogActivity"
            android:label="XmlDialogActivity"
            android:theme="@style/Theme.AppCompat.Dialog" />
    </application>

</manifest>