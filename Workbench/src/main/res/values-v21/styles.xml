<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Base">
        <!-- If you're already inheriting from a material theme or AppCompat then this will automatically be set for you -->
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.Home">

    </style>

    <style name="AppThemeNoActionBar.Grid">
        <item name="android:windowExitTransition">@transition/grid_exit</item>
        <item name="android:windowReenterTransition">@transition/slide_top</item>

        <item name="android:windowSharedElementsUseOverlay">false</item>
    </style>

    <style name="AppThemeNoActionBar.Details">
        <item name="android:windowExitTransition">@transition/default_window_fade</item>
        <item name="android:windowEnterTransition">@transition/slide_bottom</item>
        <item name="android:windowSharedElementEnterTransition">@transition/hero</item>

        <!-- When disabled, the shared elements will be drawn as part of the called Activity's view hierarchy,
        making it impossible for the shared elements to accidentally overlap on top of the system UI bars. -->
        <item name="android:windowSharedElementsUseOverlay">false</item>
    </style>

</resources>
