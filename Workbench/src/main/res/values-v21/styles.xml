<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Base">
        <!-- If you're already inheriting from a material theme or AppCompat then this will automatically be set for you -->
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.Home">

    </style>

    <style name="AppTheme.Base.Details">
        <item name="android:windowEnterTransition">@transition/slide_right</item>
        <item name="android:windowTransitionBackgroundFadeDuration">400</item>
        <!--<item name="android:windowSharedElementEnterTransition">@transition/hero</item>-->
        <item name="android:statusBarColor">@color/indigo_100</item>
        <item name="android:windowExitTransition">@transition/grid_exit</item>
        <item name="android:windowReenterTransition">@transition/slide_top</item>
    </style>

    <style name="AppTheme.Grid">
        <item name="android:statusBarColor">@color/indigo_500</item>
    </style>

</resources>
