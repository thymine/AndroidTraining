<?xml version="1.0" encoding="utf-8"?>
<me.zhang.workbench.view.SimpleListItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:padding="@dimen/activity_horizontal_padding">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/list_item_icon_margin_end"
        android:layout_marginLeft="@dimen/list_item_icon_margin_start"
        android:layout_marginRight="@dimen/list_item_icon_margin_end"
        android:layout_marginStart="@dimen/list_item_icon_margin_start"
        android:contentDescription="@null"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/title"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title" />

    <TextView
        android:id="@+id/subtitle"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/subhead"
        android:textColor="?android:attr/textColorSecondary" />

</me.zhang.workbench.view.SimpleListItem>
