<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Base" />

    <style name="AppTheme.Base.Preview">
        <item name="android:windowBackground">@color/dark</item>
    </style>

    <style name="AppTheme.Base.NoPreview">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TabLayoutTheme" parent="@style/AppTheme">
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar.Details" />

    <style name="AppThemeOpt" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/indigo_500</item>
        <item name="colorPrimaryDark">@color/indigo_700</item>
        <item name="colorAccent">@color/pink_a200</item>
    </style>

    <!-- Font Style -->
    <style name="FontStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Font">
        <item name="android:padding">6dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:text">@string/hello_world</item>
    </style>

    <style name="AnotherFontStyle">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppThemeNoActionBar.Grid.Light" />

    <style name="AppThemeNoActionBar.Grid" />

    <style name="OrientationHintTextStyle">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:onClick">onClickButton</item>
    </style>

    <style name="ButtonStyleNoOnClick">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonStyleClassic">
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/selector_undo_redo_button_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="ViewStyle">
        <item name="attr2">attr2</item>
    </style>

    <style name="MyTheme" parent="AppThemeNoActionBar">
        <item name="attr3">attr3</item>
        <item name="MyStyle">@style/MyDefaultStyle</item>
    </style>

    <style name="MyDefaultStyle">
        <item name="attr4">attr4</item>
    </style>

</resources>
