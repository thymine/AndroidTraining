<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_circle_button"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/iv_start"
        android:layout_width="@dimen/dimen_button"
        android:layout_height="@dimen/dimen_button"
        android:rotation="180"
        android:src="@mipmap/ic_forward_arrow_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_top"
        app:layout_constraintTop_toBottomOf="@+id/iv_top" />

    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="@dimen/dimen_button"
        android:layout_height="@dimen/dimen_button"
        android:rotation="-90"
        android:src="@mipmap/ic_forward_arrow_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_end"
        android:layout_width="@dimen/dimen_button"
        android:layout_height="@dimen/dimen_button"
        android:src="@mipmap/ic_forward_arrow_icon"
        app:layout_constraintStart_toEndOf="@+id/iv_top"
        app:layout_constraintTop_toBottomOf="@+id/iv_top" />

    <ImageView
        android:id="@+id/iv_bottom"
        android:layout_width="@dimen/dimen_button"
        android:layout_height="@dimen/dimen_button"
        android:rotation="90"
        android:src="@mipmap/ic_forward_arrow_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_center" />

    <ImageView
        android:id="@+id/iv_center"
        android:layout_width="@dimen/dimen_button"
        android:layout_height="@dimen/dimen_button"
        android:padding="4dp"
        android:src="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_top" />

</androidx.constraintlayout.widget.ConstraintLayout>