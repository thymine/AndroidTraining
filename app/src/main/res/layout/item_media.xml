<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:layout_width="48dp"
        android:id="@+id/mediaThumbnail"
        tools:src="@tools:sample/avatars"
        android:layout_height="48dp"
        android:contentDescription="@string/cd_media_thumbnail" />

    <TextView
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/mediaThumbnail"
        tools:text="14ff602225e602225b05d44af759f982.mp4\n\t165071ms\n\t487700 bytes\n\tcontent://media/external/video/media/8606662"
        app:layout_constraintStart_toEndOf="@+id/mediaThumbnail"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:id="@+id/mediaItem" />

</androidx.constraintlayout.widget.ConstraintLayout>