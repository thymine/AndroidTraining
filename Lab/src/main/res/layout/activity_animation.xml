<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.zhang.lab.animation.AnimationActivity">

    <TextView
        android:id="@+id/tv_object_animator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ObjectAnimator"
        android:textSize="32sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_view_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="ViewWrapper"
        android:textAllCaps="false"
        android:textSize="32sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_property_values_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PropertyValuesHolder"
        android:textSize="32sp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/iv_value_animator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_launcher"
        tools:ignore="ContentDescription" />

</LinearLayout>
