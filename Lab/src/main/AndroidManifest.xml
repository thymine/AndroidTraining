<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.zhang.lab">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="me.zhang.lab.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".timer.CountDownActivity" />
        <activity android:name=".listview.NonScrollableListViewActivity" />
        <activity android:name=".timer.CountUpActivity" />
        <activity android:name=".listview.ListViewActivity" />
        <activity android:name=".videoview.MovingActivity" />
        <activity android:name="me.zhang.lab.recyclerview.HorizontalListActivity" />
        <activity
            android:name=".propertyanimation.PropertyAnimatedActivity"
            android:screenOrientation="portrait" />
        <!-- configure this activity to use landscape orientation -->
        <activity
            android:name=".camera.CameraActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".fragment.ExampleActivity" />
        <activity android:name=".fragment.FragmentRetainInstanceActivity" />
        <activity
            android:name=".picselector.PostActivity"
            android:exported="true"
            android:theme="@style/PicSelector" />
    </application>

</manifest>
